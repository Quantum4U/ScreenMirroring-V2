<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/padding5dp"
    android:layout_marginStart="@dimen/padding5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_parent"
        app:cardCornerRadius="@dimen/padding10dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_album_icon"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_album_name"
        android:textSize="@dimen/textsize18sp"
        android:singleLine="true"
        android:textColor="@color/heading"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginTop="@dimen/padding10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_album_date"
            android:textSize="@dimen/textsize12sp"
            android:textColor="@color/heading"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="@dimen/padding5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:backgroundTint="#80000000"
            android:layout_margin="@dimen/margin_5"
            android:layout_gravity="bottom"
            android:background="@drawable/active_dot_bg"
            android:layout_width="@dimen/padding5dp"
            android:layout_height="@dimen/padding5dp"/>

        <TextView
            android:id="@+id/tv_album_duration"
            android:textSize="@dimen/textsize12sp"
            android:textColor="@color/heading"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="@dimen/padding5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>