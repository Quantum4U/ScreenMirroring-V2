<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_parent"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/padding10dp"
    app:cardCornerRadius="@dimen/padding10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_album_icon"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding10dp"
            android:layout_toRightOf="@+id/iv_album_icon"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_album_name"
                android:textSize="@dimen/textsize18sp"
                android:singleLine="true"
                android:textColor="@color/heading"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginTop="@dimen/padding10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_album_duration"
                android:textSize="@dimen/textsize12sp"
                android:textColor="#80000000"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/padding5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>