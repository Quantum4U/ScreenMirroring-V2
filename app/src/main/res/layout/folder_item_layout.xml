<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:padding="@dimen/padding10dp"
        android:id="@+id/tv_folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding20dp"
        android:text="Camera"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/heading"
        android:textSize="@dimen/textsize16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding1dp"
        android:layout_below="@+id/tv_folder_name"
        android:layout_marginLeft="@dimen/padding10dp"
        android:layout_marginTop="@dimen/padding15dp"
        android:layout_marginRight="@dimen/padding10dp"
        android:background="#1A000000" />

</RelativeLayout>