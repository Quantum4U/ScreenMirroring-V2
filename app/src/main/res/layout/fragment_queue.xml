<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding20dp"
            android:padding="@dimen/padding5dp"
            app:srcCompat="@drawable/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/menu_queue"
            android:textColor="@color/heading"
            android:textSize="@dimen/textsize20sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_queue"
        android:layout_above="@+id/rl_connected"
        android:layout_below="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<!--    <fragment-->
<!--        android:id="@+id/cast_mini_controller"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:visibility="gone"-->
<!--        app:castShowImageThumbnail="true"-->
<!--        class="com.google.android.gms.cast.framework.media.widget.MiniControllerFragment"/>-->

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/queue_empty"
        android:textColor="@color/heading"
        android:fontFamily="@font/inter_semibold"
        android:textSize="@dimen/textsize20sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/rl_connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/ll_connected"
            android:background="@drawable/splash_btn_bg"
            android:layout_marginTop="@dimen/padding10dp"
            android:layout_marginBottom="@dimen/padding10dp"
            android:paddingLeft="@dimen/padding15dp"
            android:paddingRight="@dimen/padding15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_marginRight="@dimen/padding5dp"
                android:background="@drawable/active_dot_bg"
                android:layout_width="@dimen/padding10dp"
                android:layout_height="@dimen/padding10dp"/>

            <TextView
                android:id="@+id/tv_connected"
                android:text="@string/connected"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:gravity="center"
            android:id="@+id/ll_connect"
            android:background="@drawable/cast_btn_bg"
            android:layout_marginTop="@dimen/padding10dp"
            android:layout_marginBottom="@dimen/padding10dp"
            android:paddingLeft="@dimen/padding15dp"
            android:paddingRight="@dimen/padding15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginRight="@dimen/padding15dp"
                app:srcCompat="@drawable/ic_cast_icon"
                app:tint="#FC654B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/connect"
                android:layout_width="wrap_content"
                android:textColor="#FC654B"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>