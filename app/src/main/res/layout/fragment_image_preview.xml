<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding20dp"
            android:padding="@dimen/padding5dp"
            app:tint="@color/white"
            android:rotation="270"
            app:srcCompat="@drawable/ic_back_arrow" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/preview"
            android:textColor="@color/heading"
            android:textSize="@dimen/textsize20sp" />

        <LinearLayout
            android:layout_marginRight="@dimen/padding12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/ll_connected"
            android:background="@drawable/cast_btn_bg"
            android:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/padding10dp"
            android:layout_marginBottom="@dimen/padding10dp"
            android:paddingLeft="@dimen/padding15dp"
            android:paddingRight="@dimen/padding15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_marginRight="@dimen/padding5dp"
                android:background="@drawable/active_dot_bg"
                android:layout_width="@dimen/padding10dp"
                android:layout_height="@dimen/padding10dp"/>

            <TextView
                android:id="@+id/tv_connected"
                android:text="@string/connected"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/padding12dp"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:gravity="center"
            android:id="@+id/ll_connect"
            android:layout_centerVertical="true"
            android:background="@drawable/cast_btn_bg"
            android:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/padding10dp"
            android:layout_marginBottom="@dimen/padding10dp"
            android:paddingLeft="@dimen/padding15dp"
            android:paddingRight="@dimen/padding15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginRight="@dimen/padding15dp"
                app:srcCompat="@drawable/ic_cast_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/connect"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/rl_toolbar"
        android:id="@+id/vp_img_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>