<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_root"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_prompt_icon"
            android:visibility="visible"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/premium_prompt_icon1"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"
            app:lottie_rawRes="@raw/premium_prompt_json"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>


    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cross"
        app:srcCompat="@drawable/ic_cross_icon"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/padding10dp"
        android:padding="@dimen/padding5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/rl_top"
        android:id="@+id/tv_heading"
        android:layout_marginTop="@dimen/padding10dp"
        android:textSize="@dimen/textsize20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="@string/pro_feature"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_sub_heading"
        android:layout_below="@+id/tv_heading"
        android:layout_marginLeft="@dimen/padding20dp"
        android:layout_marginRight="@dimen/padding20dp"
        android:layout_marginTop="@dimen/padding10dp"
        android:textSize="@dimen/textsize16sp"
        android:layout_centerHorizontal="true"
        android:text="@string/pro_feature_sub_heading1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/padding20dp"
        android:layout_below="@+id/tv_sub_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_watch"
            android:background="@drawable/cast_btn_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/padding20dp"
            android:layout_marginRight="@dimen/padding10dp"
            android:layout_toLeftOf="@+id/v_center"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/padding20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_free"
                android:paddingTop="@dimen/padding10dp"
                android:paddingBottom="@dimen/padding10dp"
                android:textColor="#FC784A"
                android:drawableLeft="@drawable/watch_ad_icon"
                android:drawablePadding="@dimen/padding5dp"
                android:textSize="@dimen/textsize16sp"
                android:text="@string/watch_to_cast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <View
            android:id="@+id/v_center"
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:gravity="center"
            android:layout_toRightOf="@+id/rl_watch"
            android:id="@+id/tv_premium"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/padding10dp"
            android:layout_marginRight="@dimen/padding20dp"
            android:layout_marginBottom="@dimen/padding20dp"
            android:paddingTop="@dimen/padding10dp"
            android:paddingBottom="@dimen/padding10dp"
            android:background="@drawable/splash_btn_bg"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textSize="@dimen/textsize16sp"
            android:text="@string/go_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


</RelativeLayout>