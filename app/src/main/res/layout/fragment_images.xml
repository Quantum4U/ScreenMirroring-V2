<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding20dp"
            android:padding="@dimen/padding5dp"
            app:srcCompat="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/images"
            android:textColor="@color/heading"
            android:textSize="@dimen/textsize20sp" />

        <TextView
            android:id="@+id/tv_slideshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding20dp"
            android:drawableLeft="@drawable/ic_slideshow_icon"
            android:drawablePadding="@dimen/padding5dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/slideshow"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/textsize15sp"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_toolbar"
        android:id="@+id/rl_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginBottom="@dimen/padding10dp"
            android:padding="@dimen/padding10dp"
            android:id="@+id/rl_sorting"
            android:background="@drawable/sheet_dialog_bg"
            android:backgroundTint="#1A000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="@dimen/padding10dp"
                android:textSize="@dimen/textsize16sp"
                android:textColor="@color/heading"
                android:text="@string/sort_by_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_sorting"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding10dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_sorting_icon"
                    app:srcCompat="@drawable/ic_ascending_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_sorting_text"
                    android:layout_marginLeft="@dimen/padding10dp"
                    android:text="@string/ascending"
                    android:textSize="@dimen/textsize16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:paddingBottom="@dimen/margin_left_70"
            android:id="@+id/rv_images"
            android:layout_below="@+id/rl_sorting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"/>

        <RelativeLayout
            android:background="@drawable/bottom_trans_bg"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_left_70">

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/ll_connected"
                android:background="@drawable/splash_btn_bg"
                android:layout_marginTop="@dimen/padding10dp"
                android:layout_marginBottom="@dimen/padding10dp"
                android:paddingLeft="@dimen/padding15dp"
                android:paddingRight="@dimen/padding15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginRight="@dimen/padding5dp"
                    android:background="@drawable/active_dot_bg"
                    android:layout_width="@dimen/padding10dp"
                    android:layout_height="@dimen/padding10dp"/>

                <TextView
                    android:id="@+id/tv_connected"
                    android:text="@string/connected"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/padding12dp"
                android:layout_alignParentRight="true"
                android:visibility="visible"
                android:gravity="center"
                android:id="@+id/ll_connect"
                android:layout_centerVertical="true"
                android:background="@drawable/cast_btn_bg"
                android:layout_marginTop="@dimen/padding10dp"
                android:layout_marginBottom="@dimen/padding10dp"
                android:paddingLeft="@dimen/padding15dp"
                android:paddingRight="@dimen/padding15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_casting"
                    app:srcCompat="@drawable/ic_cast_disable"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="@dimen/padding15dp"
                    android:id="@+id/iv_browser"
                    android:layout_toRightOf="@+id/iv_casting"
                    app:srcCompat="@drawable/ic_browser_disable"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="@dimen/padding15dp"
                    android:layout_toRightOf="@+id/iv_browser"
                    app:srcCompat="@drawable/ic_arrow_orange"
                    android:rotation="180"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/padding12dp"
                android:visibility="visible"
                android:gravity="center"
                android:id="@+id/ll_folder"
                android:layout_centerVertical="true"
                android:background="@drawable/folder_btn_bg"
                android:layout_marginTop="@dimen/padding10dp"
                android:layout_marginBottom="@dimen/padding10dp"
                android:paddingLeft="@dimen/padding15dp"
                android:paddingRight="@dimen/padding15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_folder_name"
                    android:text="@string/all_photos"
                    android:layout_width="wrap_content"
                    android:textColor="@color/heading"
                    android:fontFamily="@font/inter_medium"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="@dimen/padding10dp"
                    app:srcCompat="@drawable/ic_down_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>