<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/dash_json"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_logo"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:srcCompat="@drawable/splash_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_above="@+id/layout_tnc"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_app_icon"
            app:srcCompat="@drawable/splash_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <RelativeLayout
            android:layout_marginBottom="@dimen/padding20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_antenna_icon"
                android:layout_toRightOf="@+id/tv_app_name"
                android:layout_marginBottom="@dimen/padding5dp"
                android:layout_marginLeft="-6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_splash_wifi_icon"/>

            <TextView
                android:layout_marginTop="@dimen/padding5dp"
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/splash_app_name"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginBottom="@dimen/padding25dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutStart"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/padding5dp"
            android:layout_marginLeft="@dimen/padding5dp"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/splash_btn_bg"
            android:backgroundTint="@color/white"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="9dp"
                android:text="@string/start_cast"
                android:textAllCaps="false"
                android:textColor="#FF3C00"
                android:fontFamily="@font/inter_semibold"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>


    <include
        android:id="@+id/layout_tnc"
        layout="@layout/splash_tnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_powered_by"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp" />

    <include
        android:id="@+id/layout_powered_by"
        layout="@layout/splash_powered_by"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_above="@+id/adsholder"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/ad_one_padding" />

    <LinearLayout
        android:id="@+id/adsholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/adsbanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
    </LinearLayout>

</RelativeLayout>
