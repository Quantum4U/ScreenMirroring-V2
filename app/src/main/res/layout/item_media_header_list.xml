<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding35dp">

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_date"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/textsize14sp"
        android:textColor="#80000000"
        android:layout_margin="@dimen/padding10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_checkbox"
        android:layout_marginRight="@dimen/padding10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginEnd="@dimen/padding5dp"
            android:id="@+id/tv_selection"
            android:text="@string/select_all"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_toRightOf="@+id/tv_selection"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_centerVertical="true"
            android:id="@+id/header_checkbox"
            android:layout_width="@dimen/padding20dp"
            android:layout_height="@dimen/padding20dp"
            android:background="@drawable/header_cb_drawable"
            android:clickable="false"
            android:button="@null"/>

    </RelativeLayout>



</RelativeLayout>