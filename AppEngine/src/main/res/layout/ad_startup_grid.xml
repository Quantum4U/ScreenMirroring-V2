<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/native_ad_unit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/native_grid_height">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/native_grid_height"
            android:layout_margin="0dp"
            android:minHeight="80dp"
            android:padding="0dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">


                <TextView
                    android:id="@+id/img_missed"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:text="Ad"
                    android:background="#0000FF"
                    android:textColor="@color/native_med_text_color_grid"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/contentad_logo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:visibility="gone"
                    android:layout_alignParentRight="true" />

                <ImageView
                    android:id="@+id/native_ad_icon"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_below="@id/img_missed"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:maxHeight="120dp" />


                <LinearLayout
                    android:layout_above="@+id/lincall"
                    android:id="@+id/lintext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/native_ad_icon"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/native_ad_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Header Text"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/native_ad_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Subtext"
                        android:textColor="@color/black"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/contentad_advertiser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lincall"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <Button
                        android:clickable="false"
                        android:id="@+id/native_install"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="Download"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="3dp"
                        android:background="@color/native_med_button_bg"
                        android:textColor="@color/native_med_button_text_color"/>
                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>




</LinearLayout>