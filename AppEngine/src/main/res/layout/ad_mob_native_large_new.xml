<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white_inapp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_below="@+id/ad_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/native_large_height"
            android:layout_gravity="center"
            android:background="@color/native_large_bg"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/appinstall_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    />

                <com.google.android.gms.ads.formats.MediaView
                    android:id="@+id/appinstall_media"
                    android:layout_width="140dp"
                    android:background="@drawable/app_icon"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible" />


                <LinearLayout
                    android:id="@+id/text_layout"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/appinstall_call_to_action"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/appinstall_app_icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="3dp"
                        android:background="@drawable/app_icon"
                        android:layout_marginLeft="3dp"
                        android:adjustViewBounds="true"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/padding5dp"
                        android:layout_marginRight="@dimen/padding5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/appinstall_headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:layout_marginRight="@dimen/padding2dp"
                            android:layout_marginLeft="@dimen/padding2dp"
                            android:text="header line first"
                            android:maxLength="26"
                            android:textColor="@color/native_large_text_color"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/appinstall_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:maxLength="90"
                            android:text="sub texttttt"
                            android:layout_marginLeft="@dimen/padding2dp"
                            android:layout_marginRight="@dimen/padding2dp"
                            android:textColor="@color/native_large_text_color"
                            android:textSize="11sp" />

                        <!--<RatingBar-->
                            <!--android:id="@+id/appinstall_stars"-->
                            <!--style="?android:attr/ratingBarStyleSmall"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:gravity="center"-->
                            <!--android:isIndicator="true"-->
                            <!--android:numStars="5"-->
                            <!--android:stepSize="0.5"-->
                            <!--android:visibility="gone" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/appinstall_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingLeft="5dp"
                            android:paddingEnd="5dp"
                            android:paddingRight="5dp"
                            android:textColor="@color/native_large_text_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/appinstall_store"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:paddingStart="5dp"
                            android:paddingLeft="5dp"
                            android:paddingEnd="5dp"
                            android:paddingRight="5dp"
                            android:text=""
                            android:textColor="@color/native_large_sub_text_color"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:layout_toRightOf="@+id/text_layout"
                    android:id="@+id/appinstall_call_to_action"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/native_large_button_color"
                    android:text="gnsdfgjn"
                    android:textColor="@color/native_large_button_text_color"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>








    </RelativeLayout>




</com.google.android.gms.ads.formats.UnifiedNativeAdView>