<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_pro_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left_10">


                <ImageView
                    android:id="@+id/purchased_billing_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/app_icon"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/purchased_billing_icon"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/margin_left_10"
                    android:text="VIP Access"
                    android:textColor="#717171"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding2dp"
                    android:layout_marginRight="@dimen/margin_left_20"
                    android:src="@drawable/app_icon" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/padding5dp"
                android:maxLines="1"
                android:padding="@dimen/margin_left_10"
                android:text="@string/inapp_get_premium_m24apps"
                android:textColor="@color/white_inapp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_billing_icon"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/margin_left_10"
                android:drawablePadding="@dimen/margin_left_10"
                android:padding="@dimen/margin_left_10"
                android:text="@string/inapp_unlimited_feature"
                android:textColor="#424242"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_image"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:background="@drawable/inapp_page_bg">

                <RelativeLayout
                    android:id="@+id/closeRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingTop="@dimen/margin10dp"
                    android:paddingBottom="@dimen/margin10dp"
                    android:visibility="gone">


                    <LinearLayout
                        android:id="@+id/ll_view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">


                        <ImageView
                            android:id="@+id/iv_tool_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_left_20" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/margin10dp"
                            android:layout_toRightOf="@+id/iv_tool_start"
                            android:text="Upgrade to premium"
                            android:textAllCaps="true"
                            android:textColor="@color/white_inapp"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/iv_cross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_inapp_back_arrow"
                        android:visibility="gone" />

                </RelativeLayout>

                <!--                <ImageView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:layout_below="@+id/closeRl"-->
                <!--                    android:layout_centerInParent="true"-->
                <!--                    android:background="@drawable/ic_inapp_top_bg" />-->
                <!--                <View-->
                <!--                    android:background="@drawable/inapp_billing_top_grad"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent">-->

                <!--                </View>-->


                <!--                <ImageView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_alignParentStart="true"-->
                <!--                    android:layout_marginStart="15dp"-->
                <!--                    android:layout_marginBottom="@dimen/margin_left_30"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_alignParentBottom="true"/>-->

                <LinearLayout
                    android:layout_marginTop="@dimen/margin_left_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="8dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_cross_inapp" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top_image">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scroolView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/subs_now">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/rlBenefits"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:drawablePadding="@dimen/padding5dp"
                                    android:gravity="center"
                                    android:drawableLeft="@drawable/inapp_crown"
                                    android:text="@string/subscription_benefits"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="#0E0E2C"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_left_20"
                                android:layout_marginTop="@dimen/margin10dp"
                                android:layout_marginBottom="@dimen/margin10dp"
                                android:gravity="center|start"
                                android:padding="5dp">


                                <TextView
                                    android:id="@+id/tv_premium_benefits"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#0E0E2C"
                                    android:textSize="13sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/adapter_purchase_item_new" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

                <TextView
                    android:id="@+id/subs_now"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_above="@+id/description_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="@dimen/padding5dp"
                    android:background="@drawable/inapp_sub_btn"
                    android:gravity="center"
                    android:text="@string/start_free_trial"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white_inapp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/llterm"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/margin_left_10"
                    android:layout_marginTop="@dimen/margin_left_10"
                    android:layout_marginEnd="@dimen/margin_left_10"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:textColor="#0E0E2C"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/tvTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/llterm"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:text="@string/termsCond"
                    android:textColor="@color/white_inapp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llterm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="3">


                    <TextView
                        android:id="@+id/dont_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/dont_show_again"
                        android:textColor="#0E0E2C"
                        android:textSize="12sp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/manange_subs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/manage_subs"
                        android:textColor="#0E0E2C"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/conti_with_ads"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/continue_with_ads"
                        android:textColor="#0E0E2C"
                        android:textSize="12sp"
                        android:visibility="visible" />


                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>